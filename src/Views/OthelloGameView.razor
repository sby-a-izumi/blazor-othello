@page "/othello"
@using BlazorOthello.ViewModels
@inject OthelloGameViewModel ViewModel

<div>
    <h3>Othello Game</h3>
    <table>
        @for (int i = 0; i < 8; i++)
        {
            <tr>
                @for (int j = 0; j < 8; j++)
                {
                    <td>@ViewModel.GetPlayerAt(i, j)</td>
                }
            </tr>
        }
    </table>
</div>
